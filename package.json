{
  "name": "@kissmybutton/motorcortex-threejs",
  "version": "2.0.0",
  "description": "Threejs library for MotorCortex",
  "main": "dist/motorcortex-three.cjs.js",
  "module": "dist/motorcortex-three.esm.js",
  "browser": "dist/motorcortex-three.umd.js",
  "files": [
    "dist"
  ],
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kissmybutton/motorcortex-threejs.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "update-force:packages": "npm-check-updates -u && npm i",
    "update:packages": "npm update --save/--save-dev",
    "concurrently": "concurrently -c \"cyan.bold,magenta.bold\" --names \"JS,Styles\"",
    "lint:styles": "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json",
    "lint:js": "./node_modules/eslint/bin/eslint.js -c .eslintrc src/**/*.js",
    "lint": "npm run concurrently \"npm run lint:js\"",
    "lint:fix": "npm run concurrently  \"npm run lint:js -- --fix\" ",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "webpack serve --inline --hot --config ./demo/demo-one/webpack.config.js",
    "build:demo": "webpack --config ./demo/demo-one/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist"
  },
  "keywords": [
    "motorcortex",
    "animation",
    "threejs",
    "3d"
  ],
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "three": "^0.128.0"
  },
  "peerDependencies": {
    "@kissmybutton/motorcortex": "^6.4.3"
  },
  "devDependencies": {
    "@babel/cli": "7.14.3",
    "@babel/core": "7.14.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.14.2",
    "@babel/preset-env": "7.14.2",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@kissmybutton/motorcortex": "6.4.3",
    "@kissmybutton/motorcortex-anime": "2.1.14",
    "@kissmybutton/motorcortex-player": "2.0.1",
    "@kissmybutton/motorcortex-subtitles": "1.0.8",
    "@kissmybutton/motorcortex-typewriting": "1.0.11",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/npm": "7.1.3",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2015-node5": "1.2.0",
    "babel-preset-stage-0": "6.24.1",
    "commitizen": "4.2.4",
    "concurrently": "5.3.0",
    "coveralls": "3.1.0",
    "css-loader": "5.2.6",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.27.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.23.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "5.0.0",
    "exports-loader": "2.0.0",
    "html-loader": "2.1.2",
    "husky": "4.3.8",
    "imports-loader": "1.2.0",
    "json-stringify-safe": "5.0.1",
    "lint-staged": "10.5.4",
    "npx": "10.2.2",
    "path-browserify": "1.0.1",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "rollup": "2.50.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "7.0.2",
    "sass-loader": "10.2.0",
    "semantic-release": "17.4.3",
    "shelljs": "0.8.4",
    "style-loader": "2.0.0",
    "stylelint": "13.13.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-standard": "20.0.0",
    "svg-inline-loader": "0.8.2",
    "svg-url-loader": "7.1.1",
    "uuid": "8.3.2",
    "webpack": "5.37.1",
    "webpack-cli": "4.7.0",
    "webpack-dev-server": "3.11.2",
    "whatwg-fetch": "3.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:prod"
    }
  }
}
