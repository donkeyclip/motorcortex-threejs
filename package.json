{
  "name": "@kissmybutton/motorcortex-threejs",
  "version": "1.2.6",
  "description": "Threejs library for MotorCortex",
  "main": "dist/motorcortex-three.cjs.js",
  "module": "dist/motorcortex-three.esm.js",
  "browser": "dist/motorcortex-three.umd.js",
  "files": [
    "dist"
  ],
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kissmybutton/motorcortex-threejs.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "concurrently": "concurrently -c \"cyan.bold,magenta.bold\" --names \"JS,Styles\"",
    "lint:styles": "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json",
    "lint:js": "eslint -c .eslintrc src/**/*.{js,jsx} ",
    "lint": "npm run concurrently \"npm run lint:js\" \"npm run lint:styles\" ",
    "lint:fix": "npm run concurrently  \"npm run lint:js -- --fix\" \"npm run lint:styles -- --fix\"",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack-dev-server --mode=development --config ./demo/webpack.config.js",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "prepush": "npm run test:prod",
    "commitmsg": "commitlint -E GIT_PARAMS"
  },
  "keywords": [
    "motorcortex",
    "animation",
    "threejs",
    "3d"
  ],
  "lint-staged": {
    "linters": {
      "*.json": [
        "prettier --write",
        "git add"
      ],
      "*.{css,scss}": [
        "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json --fix",
        "git add"
      ],
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "exports-loader": "^0.7.0",
    "imports-loader": "^0.8.0",
    "three": "^0.116.1",
    "whatwg-fetch": "^2.0.4",
    "zlib": "^1.0.5",
    "zlib.es": "^0.6.0"
  },
  "peerDependencies": {
    "@kissmybutton/motorcortex": "^3.5.3-rc4"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@kissmybutton/motorcortex": "^3.6.4",
    "@kissmybutton/motorcortex-player": "^1.5.4",
    "@semantic-release/changelog": "^2.0.2",
    "@semantic-release/git": "^5.0.0",
    "@semantic-release/github": "^4.2.17",
    "@semantic-release/npm": "^3.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-preset-es2015-node5": "^1.2.0",
    "commitizen": "^2.10.1",
    "concurrently": "^3.6.0",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "es6-promise": "^4.2.4",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "json-stringify-safe": "^5.0.1",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.14.1",
    "npx": "*",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1",
    "rollup": "^2.3.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "sass-loader": "^7.0.1",
    "semantic-release": "^15.6.0",
    "shelljs": "^0.8.2",
    "stylelint": "^9.3.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3",
    "uuid": "^3.3.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
